<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/eightDp"
    android:background="@drawable/curvedbuttonstyle">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fourDp"
        app:cardCornerRadius="@dimen/fourDp"
        app:cardElevation="@dimen/fourDp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewCheckIn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/eightDp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/abc"
                app:civ_border_color="#000"
                app:civ_border_width="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewAttendeeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eightDp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="@dimen/eightDp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageViewCheckIn"
                app:layout_constraintTop_toTopOf="@+id/imageViewCheckIn" />

            <TextView
                android:id="@+id/txtViewAttendanceCheckIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eightDp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="@dimen/eightDp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toEndOf="@+id/imageViewCheckIn"
                app:layout_constraintTop_toBottomOf="@+id/textViewAttendeeName" />

            <TextView
                android:id="@+id/textViewDutyPost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eightDp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="@dimen/eightDp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewCheckIn"
                app:layout_constraintTop_toBottomOf="@+id/txtViewAttendanceCheckIn" />

            <TextView
                android:id="@+id/txtViewAttendeeLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eightDp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:padding="@dimen/eightDp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageViewCheckIn"
                app:layout_constraintTop_toBottomOf="@+id/textViewWorkShift" />

            <TextView
                android:id="@+id/textViewWorkShift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eightDp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="@dimen/eightDp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewCheckIn"
                app:layout_constraintTop_toBottomOf="@+id/textViewDutyPost" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>